<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/img_ebook"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="12dp"
        android:background="@color/gray"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/tv_title_ebook"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="@color/gray"
        app:layout_constraintLeft_toRightOf="@+id/img_ebook"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_ebook" />

    <View
        android:id="@+id/tv_author_ebook"
        android:layout_width="150dp"
        android:layout_height="16dp"
        android:layout_marginTop="12dp"
        android:background="@color/gray"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_title_ebook"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_ebook" />

</androidx.constraintlayout.widget.ConstraintLayout>
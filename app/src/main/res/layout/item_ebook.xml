<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_ebook"
    android:layout_marginBottom="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_ebook"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="12dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="6dp" />

        <TextView
            android:id="@+id/tv_title_ebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/img_ebook"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/img_ebook"
            tools:text="Belajar Membuat Web Untuk Pemula" />

        <TextView
            android:id="@+id/tv_date_ebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="4dp"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/img_ebook"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="SmallSp"
            tools:text="Created at" />

        <TextView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:text="@string/line"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_date_ebook"
            app:layout_constraintRight_toLeftOf="@id/tv_date_ebook"
            app:layout_constraintTop_toTopOf="@id/tv_date_ebook" />

        <TextView
            android:id="@+id/tv_category_ebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:textColor="@color/utama"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_date_ebook"
            app:layout_constraintRight_toLeftOf="@id/line"
            app:layout_constraintTop_toTopOf="@id/tv_date_ebook"
            tools:ignore="SmallSp"
            tools:text="Category" />

        <TextView
            android:id="@+id/tv_author_ebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/utama"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/tv_title_ebook"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_ebook"
            tools:ignore="SmallSp"
            tools:text="Author" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>